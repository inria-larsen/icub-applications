<application>
  <name>Skin Gui All</name>

  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from left_arm.ini  --xpos 0 --ypos 350 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiLA</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from left_forearm.ini  --xpos 0 --ypos 0 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiLF</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from left_hand.ini  --xpos 320 --ypos 0 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiLH</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from right_arm.ini  --xpos 640 --ypos 350 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiRA</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from right_forearm.ini  --xpos 640 --ypos 0 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiRF</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from right_hand.ini  --xpos 960 --ypos 0 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiRH</tag>
  </module>
  <module>
    <name>iCubSkinGui</name>
    <!-- Remember to use the proper configuration files (i.e. "_V2.ini" for V2 robots) -->
    <parameters>--from torso.ini  --xpos 320 --ypos 350 --width 300 --height 300</parameters>
    <node>icubsrv</node>
    <tag>skinGuiT</tag>
  </module>
  
  
  <connection>
    <from>/skinManager/skin_events:o</from>
    <to>/wholeBodyDynamics/skin_contacts:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/skinManagerGui/rpc:o</from>
    <to>/skinManager/rpc</to>
    <protocol>tcp</protocol>
  </connection>
  <connection>
    <from>/skinManager/monitor:o</from>
    <to>/skinManagerGui/monitor:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/skinManager/info:o</from>
    <to>/skinManagerGui/info:i</to>
    <protocol>tcp</protocol>
  </connection>
  
  <connection>
    <from>/icub/skin/left_hand</from>
    <to>/skinGui/left_hand:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/icub/skin/left_forearm</from>
    <to>/skinGui/left_forearm:i</to>
    <protocol>udp</protocol>
  </connection>  
  <connection>
    <from>/icub/skin/left_arm</from>
    <to>/skinGui/left_arm:i</to>
    <protocol>udp</protocol>
  </connection>  
  <connection>
    <from>/icub/skin/right_hand</from>
    <to>/skinGui/right_hand:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/icub/skin/right_forearm</from>
    <to>/skinGui/right_forearm:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/icub/skin/right_arm</from>
    <to>/skinGui/right_arm:i</to>
    <protocol>udp</protocol>
  </connection>
  <connection>
    <from>/icub/skin/torso</from>
    <to>/skinGui/torso:i</to>
    <protocol>udp</protocol>
  </connection>
</application>
